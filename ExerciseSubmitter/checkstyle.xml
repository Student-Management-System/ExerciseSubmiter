        <!--<module name="IllegalInstantiation"/>-->
        <!--<module name="IllegalToken">
		    <property name="tokens" value="LITERAL_SWITCH, POST_INC, POST_DEC"/>
		</module>-->
		<!--<module name="IllegalTokenText">-->
		<module name="InnerAssignment"/>
		<!--<module name="MagicNumber"/>--> <!-- interesting but not always ok -->
		<module name="ModifiedControlVariable"/> <!-- disable for beginners -->
        <module name="MissingSwitchDefault"/>
        <!--<module name="RedundantThrows"/>-->
        <module name="SimplifyBooleanExpression"/> <!-- disable for beginners -->
        <module name="SimplifyBooleanReturn"/> <!-- disable for beginners -->
		<module name="StringLiteralEquality"/> <!-- disable for beginners -->
		<module name="NestedIfDepth">
			<property name="max" value="4"/>		<!-- higher value for beginners? -->
		</module>
		<module name="NestedTryDepth">
			<property name="max" value="1"/>
		</module>
		<!--<module name="SuperClone"/>-->
		<module name="SuperFinalize"/>
		<!--<module name="IllegalCatch">
			<property name="illegalClassNames" value="java.lang.Exception, java.lang.Throwable, java.lang.RuntimeException"/>
		</module>--><!-- enable for beginners -->
		<!--<module name="IllegalThrows">
			<property name="illegalClassNames" value="java.lang.Exception, java.lang.Throwable, java.lang.RuntimeException"/>
		</module>--><!-- enable for beginners -->
		<!--<module name="PackageDeclaration"/>--> <!-- disable for beginners-->
		<!--<module name="ReturnCount">
		    <property name="max" value="2"/>
		</module>--><!-- enable for beginners -->
		<!--<module name="IllegalType"/>--> <!-- not further configured but interesting -->
		<module name="DeclarationOrder"/>
		<!--<module name="ParameterAssignment"/> --> <!--disable for beginners -->
		<!--<module name="ExplicitInitialization"/>-->
		<module name="DefaultComesLast"/> <!--disable for beginners -->
		<!--<module name="MissingCtor"/>-->
		<module name="FallThrough">
			<property name="checkLastCaseGroup" value="true"/>
			<property name="reliefPattern" value="fallthru|falls? ?through"/>
		</module>
		<!--<module name="MultipleStringLiterals">
			<property name="allowedDuplicates" value="1"/>
			<property name="ignoreStringsRegexp" value='^""$'/>
		</module>-->
		<module name="MultipleVariableDeclarations"/> <!-- disable for beginners-->
		<!--<module name="RequireThis">
		    <property name="checkFields" value="true"/>
			<property name="checkMethods" value="true"/>
		</module>-->
		<module name="UnnecessaryParentheses"> <!-- disable for beginners-->
		    <property name="severity" value="warning"/>
		</module>


        <!-- Checks for class design                         -->
        <!-- See http://checkstyle.sf.net/config_design.html -->
        <!--<module name="FinalClass"/>-->
        <!--<module name="InterfaceIsType">
		    <property name="allowMarkerInterfaces" value="true"/>
		</module>-->
        <module name="VisibilityModifier">
			<property name="packageAllowed" value="false"/> <!-- enable for beginners-->
			<property name="protectedAllowed" value="true"/>
			<property name="publicMemberPattern" value="^serialVersionUID$"/>
		</module>
		<module name="HideUtilityClassConstructor"/> <!-- disable for beginners-->
		<!--<module name="DesignForExtension"/>-->
		<!--<module name="MutableException"/>-->
		<!--<module name="ThrowsCount">
			<property name="max" value="1"/>
		</module>-->
		
		<!-- Checks for duplicate code                         -->
        <!-- See http://checkstyle.sf.net/config_metrics.html -->
        <module name="BooleanExpressionComplexity">
			<property name="max" value="3"/>
		</module>
		<!--<module name="DataAbstractionCoupling">
			<property name="max" value="7"/>
		</module>-->
		<!-- hints for reviews --><!-- cyclomatic: good 1-4, ok 5-7, refactoring 8-10, 11+ refactor now-->
		<!--<module name="ClassFanOutComplexity">
			<property name="max" value="20"/>
		</module>
